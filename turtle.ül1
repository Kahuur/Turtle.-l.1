#Kilpkonna liikumise harjutamine
import turtle


#tekitan akna ja lisan muutujasse
aken = turtle.Screen()
aken.setup(300,300)
aken.title("Kilpkonna harjutus 01")

#konna loomine
konn1 = turtle.Turtle()
konn1.color("lime")
konn1.left(0)
konn1.forward(100)

konn2 = turtle.Turtle()
konn2.color("red")
konn2.left(45)
konn2.forward(100)

konn3 = turtle.Turtle()
konn3.color("blue")
konn3.left(90)
konn3.forward(100)

konn4 = turtle.Turtle()
konn4.color("orange")
konn4.left(135)
konn4.forward(100)

konn5 = turtle.Turtle()
konn5.color("pink")
konn5.left(180)
konn5.forward(100)

konn6 = turtle.Turtle()
konn6.color("black")
konn6.left(225)
konn6.forward(100)

konn7 = turtle.Turtle()
konn7.color("green")
konn7.left(270)
konn7.forward(100)

konn8 = turtle.Turtle()
konn8.color("brown")
konn8.left(315)
konn8.forward(100)

turtle.exitonclick()
